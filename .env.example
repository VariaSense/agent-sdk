# Agent SDK Environment Configuration
# Copy this file to .env and set appropriate values for your environment

# Environment Settings
AGENT_SDK_ENV=development
AGENT_SDK_LOG_LEVEL=INFO
LOG_FORMAT=text

# API Configuration
API_KEY=your-secret-api-key-here
API_HOST=0.0.0.0
API_PORT=9000

# LLM Configuration
OPENAI_API_KEY=sk-...
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini

# Rate Limiting
RATE_LIMIT_CALLS=100
RATE_LIMIT_TOKENS=10000
RATE_LIMIT_WINDOW=60

# Configuration Files
CONFIG_PATH=config.yaml

# Database (for future persistence)
DATABASE_URL=sqlite:///agent_sdk.db

# Observability
METRICS_ENABLED=false
TRACING_ENABLED=false

# Memory Limits
MAX_SHORT_TERM_MESSAGES=1000
MAX_LONG_TERM_MESSAGES=10000
